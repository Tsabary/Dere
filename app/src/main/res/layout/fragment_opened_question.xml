<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.OpenedQuestionFragment">


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_votes"
                        tools:text="7"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/answer_upvote"
                        app:layout_constraintEnd_toEndOf="@+id/answer_upvote"
                        app:layout_constraintTop_toBottomOf="@+id/answer_upvote"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/answer_downvote"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"/>
                <ImageButton
                        android:src="@android:drawable/arrow_up_float"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_upvote"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/answer_votes"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"/>
                <ImageButton
                        android:src="@android:drawable/arrow_down_float"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_downvote"
                        app:layout_constraintStart_toStartOf="@+id/answer_votes"
                        app:layout_constraintEnd_toEndOf="@+id/answer_votes"
                        app:layout_constraintTop_toBottomOf="@+id/answer_votes"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/divider2"/>
                <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toBottomOf="@+id/opened_question_tags"
                        android:layout_marginTop="24dp"/>
                <TextView
                        android:text="How do I how do I how do I how How do I how do I how do I how How do I how do I how do I how How do I how do I how do I how?"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/opened_question_title"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/gray900"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4sp"
                        android:textSize="18sp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toStartOf="@+id/answer_downvote"
                        android:layout_marginStart="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="24dp"/>
                <TextView
                        android:text="tags, tags, tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/opened_question_tags"
                        app:layout_constraintStart_toStartOf="@+id/opened_question_title"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/opened_question_title"
                        android:textColor="@color/gray500"/>
                <TextView
                        android:text="@string/details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_content"
                        app:layout_constraintTop_toBottomOf="@+id/divider2"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:textColor="@color/gray900"
                        android:lineSpacingExtra="4sp"/>
                <TextView
                        android:text="Added 4 hours ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_timestamp"
                        app:layout_constraintStart_toStartOf="@+id/answer_content"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/answer_content"
                        android:textColor="@color/gray500"/>

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:civ_border_color="#424242"
                        app:civ_border_width="1dp"
                        android:id="@+id/answer_author_image"
                        tools:src="@drawable/no_dread"
                        app:layout_constraintStart_toStartOf="@+id/answer_timestamp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/answer_timestamp"/>

                <TextView
                        android:text="Author Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_author_name"
                        app:layout_constraintStart_toEndOf="@+id/answer_author_image"
                        android:layout_marginStart="24dp"
                        app:layout_constraintTop_toTopOf="@+id/answer_author_image"/>
                <TextView
                        android:text="Author reputation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_author_reputation"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/answer_author_name"
                        app:layout_constraintBottom_toBottomOf="@+id/answer_author_image"
                        app:layout_constraintStart_toStartOf="@+id/answer_author_name"
                />
                <View
                        android:id="@+id/divider3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintTop_toBottomOf="@+id/answer_author_reputation"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />
                <TextView
                        android:text="Save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/opened_question_save"
                        app:layout_constraintTop_toBottomOf="@+id/divider3"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/opened_question_share"
                        android:textStyle="bold"/>
                <TextView
                        android:text="Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/opened_question_share"
                        app:layout_constraintTop_toTopOf="@+id/opened_question_save"
                        app:layout_constraintBottom_toBottomOf="@+id/opened_question_save"
                        app:layout_constraintStart_toEndOf="@+id/opened_question_save"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textStyle="bold"/>
                <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        tools:layout_editor_absoluteX="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/opened_question_save"
                        android:layout_marginTop="24dp"/>
                <Button
                        android:text="Answer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/opened_question_answer_btn"
                        app:layout_constraintTop_toBottomOf="@+id/divider4"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"/>
                <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintTop_toBottomOf="@+id/opened_question_answer_btn"
                        android:layout_marginTop="16dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteX="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider5"
                        android:layout_marginTop="16dp"
                        android:id="@+id/opened_question_answers_recycler"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>