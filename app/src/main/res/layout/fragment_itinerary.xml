<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ItineraryFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/constraintLayout7">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/itinerary_cover_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio=""
                tools:srcCompat="@android:drawable/sym_def_app_icon"
                android:foreground="#4D000000"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cover_image"/>
        <TextView
                tools:text="On week for couples that like art and surfing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/itinerary_title"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@+id/itinerary_cover_image"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"/>
        <TextView
                tools:text="Explore Barcelona's best beaches and art venues, eat where the locals eat and keep it all within budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/itinerary_description"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_black"
                app:layout_constraintStart_toStartOf="@+id/itinerary_title"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/itinerary_title"
                app:layout_constraintEnd_toEndOf="@+id/itinerary_title"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/itinerary_youtube_player"/>

        <Button
                tools:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/itinerary_youtube_player"
                app:layout_constraintBottom_toBottomOf="@+id/itinerary_youtube_player"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
        />
        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:enableAutomaticInitialization="true"
                app:autoPlay="false"
                app:showFullScreenButton="false"
                android:layout_marginEnd="72dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="72dp"
                app:layout_constraintHorizontal_bias="0.831"
                android:id="@+id/itinerary_youtube_player"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>