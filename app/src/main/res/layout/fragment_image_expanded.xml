<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ImageFullSizeFragment"
        android:background="@color/black">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:elevation="7dp"
            android:id="@+id/image_expended_options_background"
            android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                mapbox:layout_constraintTop_toTopOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                android:elevation="8dp"
                android:background="@drawable/form_field"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:id="@+id/image_expended_options_box">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    mapbox:layout_constraintTop_toTopOf="parent"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    mapbox:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/image_expended_options_delete_container"
                    android:visibility="gone">

                <TextView
                        android:text="Are you sure you want to delete this post?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_delete_message"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"/>
                <TextView
                        android:text="@android:string/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_delete_cancel_button"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintTop_toBottomOf="@id/image_expended_delete_message"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        mapbox:layout_constraintEnd_toStartOf="@id/image_expended_delete_remove_button"
                        android:layout_marginEnd="32dp"/>
                <TextView
                        android:text="Remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_delete_remove_button"
                        mapbox:layout_constraintTop_toTopOf="@+id/image_expended_delete_cancel_button"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_delete_cancel_button"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toEndOf="@+id/image_expended_delete_cancel_button"
                        android:layout_marginStart="32dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    mapbox:layout_constraintTop_toTopOf="parent"
                    mapbox:layout_constraintBottom_toBottomOf="parent"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/image_expended_options_edit_delete"
                    android:visibility="visible">

                <TextView
                        android:text="Edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_edit"
                        android:paddingStart="64dp"
                        android:paddingEnd="64dp"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="Delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_remove"
                        android:paddingStart="64dp"
                        android:paddingEnd="64dp"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintTop_toBottomOf="@id/image_expended_edit"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/image_expended_comment_box"
            android:id="@+id/image_expended_scrollView"
            android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                    android:src="@drawable/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:id="@+id/image_expended_options_button"
                    mapbox:layout_constraintTop_toTopOf="@id/image_expended_author_image"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    mapbox:layout_constraintBottom_toBottomOf="@id/image_expended_author_image"
                    android:scaleType="fitCenter"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="43dp"
                    android:id="@+id/image_expended_author_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="16dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_expended_author_name"
                    tools:text="autore name"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintStart_toEndOf="@+id/image_expended_author_image"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/image_expended_author_image"
                    android:textColor="@color/gray800"
                    android:textSize="15sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_expended_author_reputation"
                    tools:text="(12)"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray500"
                    app:layout_constraintTop_toTopOf="@+id/image_expended_author_name"
                    app:layout_constraintBottom_toBottomOf="@+id/image_expended_author_name"
                    app:layout_constraintStart_toEndOf="@+id/image_expended_author_name"
                    mapbox:layout_constraintEnd_toStartOf="@+id/image_expended_options_button"
                    android:layout_marginEnd="16dp"
                    mapbox:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="8dp"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_expended_timestamp"
                    android:textColor="@color/gray500"
                    tools:text="4 hours ago"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintTop_toBottomOf="@+id/image_expended_author_name"
                    app:layout_constraintStart_toEndOf="@+id/image_expended_author_image"
                    android:layout_marginStart="16dp"
                    mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_author_image"/>
            <co.getdere.otherClasses.SwipeLockableViewPager
                    android:id="@+id/image_expended_viewpager"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:layout_marginTop="16dp"
                    mapbox:layout_constraintTop_toBottomOf="@+id/image_expended_author_image"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_expended_tags"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    mapbox:layout_constraintTop_toBottomOf="@+id/image_expended_viewpager"
                    android:layout_marginTop="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray500"
                    android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_expended_comments_recycler"
                    app:layout_constraintTop_toBottomOf="@+id/image_expended_divider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">
            </androidx.recyclerview.widget.RecyclerView>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp"
                    android:background="@color/white"
                    android:id="@+id/image_expended_actions_container"
                    mapbox:layout_constraintTop_toBottomOf="@+id/image_expended_tags">

                <ImageButton
                        android:src="@drawable/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_map"
                        android:background="@android:color/transparent"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toStartOf="@+id/image_expended_like_button"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="32dp"/>
                <ImageButton
                        android:src="@drawable/heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_like_button"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        mapbox:layout_constraintTop_toTopOf="@+id/image_expended_map"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_map"
                        mapbox:layout_constraintStart_toEndOf="@+id/image_expended_map"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toStartOf="@+id/image_expended_bucket_icon"/>
                <ImageButton
                        android:src="@drawable/bucket"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_bucket_icon"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        mapbox:layout_constraintTop_toTopOf="@+id/image_expended_like_button"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_like_button"
                        mapbox:layout_constraintStart_toEndOf="@+id/image_expended_like_button"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toStartOf="@+id/image_expended_share"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_image_details"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/image_expended_stats_box"
                        android:layout_marginEnd="48dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:fontFamily="@font/roboto_medium"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"/>


                <ImageButton
                        android:src="@drawable/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_share"
                        android:background="@android:color/transparent"
                        mapbox:layout_constraintTop_toTopOf="@+id/image_expended_bucket_icon"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_bucket_icon"
                        mapbox:layout_constraintStart_toEndOf="@+id/image_expended_bucket_icon"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toEndOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_stats_box"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintTop_toBottomOf="@+id/image_expended_map"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        mapbox:layout_constraintVertical_bias="0.0">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_expended_like_count"
                            tools:text="12"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/gray500"
                            mapbox:layout_constraintTop_toTopOf="parent"
                            mapbox:layout_constraintStart_toStartOf="parent"
                            mapbox:layout_constraintHorizontal_chainStyle="packed"/>
                    <TextView
                            android:text="	●"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:textSize="6sp"
                            android:textColor="@color/gray500"
                            mapbox:layout_constraintTop_toTopOf="@+id/image_expended_like_count"
                            mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_like_count"
                            mapbox:layout_constraintStart_toEndOf="@+id/image_expended_like_count"
                            android:layout_marginStart="24dp"
                            mapbox:layout_constraintHorizontal_bias="0.5"
                            mapbox:layout_constraintEnd_toStartOf="@+id/image_expended_bucket_count"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_expended_bucket_count"
                            tools:text="132"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/gray500"
                            mapbox:layout_constraintTop_toTopOf="@+id/textView4"
                            mapbox:layout_constraintBottom_toBottomOf="@+id/textView4"
                            mapbox:layout_constraintStart_toEndOf="@+id/textView4"
                            android:layout_marginStart="24dp"
                            mapbox:layout_constraintHorizontal_bias="0.5"
                            mapbox:layout_constraintEnd_toStartOf="@+id/textView7"/>
                    <TextView
                            android:text="●"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:textColor="@color/gray500"
                            android:textSize="6sp"
                            mapbox:layout_constraintTop_toTopOf="@+id/image_expended_bucket_count"
                            mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_bucket_count"
                            mapbox:layout_constraintStart_toEndOf="@+id/image_expended_bucket_count"
                            android:layout_marginStart="24dp"
                            mapbox:layout_constraintHorizontal_bias="0.5"
                            mapbox:layout_constraintEnd_toStartOf="@+id/image_expended_comment_count"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_expended_comment_count"
                            android:textColor="@color/gray500"
                            tools:text="5"
                            android:fontFamily="@font/roboto_medium"
                            mapbox:layout_constraintTop_toTopOf="@+id/textView7"
                            mapbox:layout_constraintBottom_toBottomOf="@+id/textView7"
                            mapbox:layout_constraintStart_toEndOf="@+id/textView7"
                            android:layout_marginStart="24dp"
                            mapbox:layout_constraintHorizontal_bias="0.5"
                            mapbox:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_link_address"
                        android:layout_marginBottom="24dp"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        mapbox:layout_constraintTop_toBottomOf="@+id/image_expended_image_details"
                        android:layout_marginTop="16dp"
                        tools:text="httpssdfdsfsdf"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/green700"
                        mapbox:layout_constraintVertical_bias="0.0"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        mapbox:layout_constraintHorizontal_bias="0.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                    android:id="@+id/image_expended_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    mapbox:layout_constraintTop_toBottomOf="@+id/image_expended_actions_container"
                    android:layout_marginTop="16dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/image_expended_comment_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="6dp"
            android:background="@color/white">

        <TextView
                android:text="Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_expended_comments_post_button"
                android:textColor="@color/green700"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toTopOf="@+id/image_expended_comments_comment_input"
                app:layout_constraintBottom_toBottomOf="@+id/image_expended_comments_comment_input"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_expended_comments_comment_input"
                android:layout_marginStart="24dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/image_expended_comments_current_user_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:ems="10"
                android:id="@+id/image_expended_comments_comment_input"
                app:layout_constraintTop_toTopOf="@+id/image_expended_comments_current_user_image"
                app:layout_constraintBottom_toBottomOf="@+id/image_expended_comments_current_user_image"
                android:hint="Add a comment.."
                app:layout_constraintStart_toEndOf="@+id/image_expended_comments_current_user_image"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/image_expended_comments_post_button"
                android:layout_marginEnd="24dp"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_semibold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>