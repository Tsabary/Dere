<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ImageFullSizeFragment"
        android:background="@color/black">


    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/comment_box"
            android:id="@+id/photo_social_scrollView"
            android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/image_full_image"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintDimensionRatio="5:4"
                    tools:srcCompat="@drawable/no_dread"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/image_full_image"
                    android:id="@+id/constraintLayout3"
            >

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/photo_social_author_image"
                        tools:src="@drawable/no_dread"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/photo_social_bucket_icon"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"/>
                <ImageButton
                        android:src="@drawable/bucket"
                        android:layout_width="25dp"
                        android:layout_height="38dp"
                        android:id="@+id/photo_social_bucket_icon"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_like_count"
                        app:layout_constraintBottom_toBottomOf="@+id/photo_social_like_count"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_like_count"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/photo_social_bucket_count"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_comment_count"
                        tools:text="12"
                        android:fontFamily="@font/open_sans_semibold"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_comment_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/photo_social_comment_icon"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_comment_icon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/photo_social_timestamp"
                        android:visibility="gone"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_author_name"
                        tools:text="autore name"
                        android:fontFamily="@font/open_sans_bold"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_author_image"
                        android:layout_marginStart="32dp"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_author_image"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_timestamp"
                        android:textColor="@color/gray500"
                        tools:text="4 hours ago"
                        android:fontFamily="@font/open_sans_semibold"
                        app:layout_constraintTop_toBottomOf="@+id/photo_social_author_name"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_author_image"
                        android:layout_marginStart="32dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_image_details"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_author_image"
                        android:layout_marginStart="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/photo_social_timestamp"
                        android:layout_marginEnd="48dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:fontFamily="@font/open_sans_semibold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_bucket_count"
                        tools:text="132"
                        android:fontFamily="@font/open_sans_semibold"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_bucket_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/photo_social_bucket_icon"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_bucket_icon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/photo_social_comment_icon"
                        android:layout_marginEnd="24dp"/>
                <ImageButton
                        android:src="@drawable/comment"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_comment_icon"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_bucket_count"
                        app:layout_constraintBottom_toBottomOf="@+id/photo_social_bucket_count"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_bucket_count"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/photo_social_comment_count"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"/>

                <ImageButton
                        android:src="@drawable/heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_like_button"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintEnd_toStartOf="@+id/photo_social_like_count"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_like_count"
                        tools:text="12"
                        android:fontFamily="@font/open_sans_semibold"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_like_button"
                        app:layout_constraintBottom_toBottomOf="@+id/photo_social_like_button"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_like_button"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/photo_social_bucket_icon"
                        android:layout_marginEnd="24dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_author_reputation"
                        tools:text="(12)"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/gray500"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_author_name"
                        app:layout_constraintBottom_toBottomOf="@+id/photo_social_author_name"
                        app:layout_constraintStart_toEndOf="@+id/photo_social_author_name"
                        android:layout_marginStart="8dp"/>
                <ImageButton
                        android:src="@drawable/ic_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_share"
                        android:background="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"/>
                <ImageButton
                        android:src="@drawable/link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_link"
                        app:layout_constraintTop_toTopOf="@+id/photo_social_share"
                        app:layout_constraintBottom_toBottomOf="@+id/photo_social_share"
                        app:layout_constraintEnd_toStartOf="@+id/photo_social_share"
                        android:layout_marginEnd="24dp"
                        android:background="@android:color/transparent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments_recycler"
                    app:layout_constraintTop_toBottomOf="@+id/divider11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0"
                    android:layout_marginTop="16dp"/>
            <View
                    android:id="@+id/divider11"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray100"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/comment_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="6dp"
            android:background="@color/white">

        <TextView
                android:text="Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photo_comments_post_button"
                android:textColor="@color/green700"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toTopOf="@+id/photo_comments_comment_input"
                app:layout_constraintBottom_toBottomOf="@+id/photo_comments_comment_input"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/photo_comments_comment_input"
                android:layout_marginStart="24dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/photo_comments_current_user_image"
                tools:src="@drawable/no_dread"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/photo_comments_comment_input"
                app:layout_constraintTop_toTopOf="@+id/photo_comments_current_user_image"
                app:layout_constraintBottom_toBottomOf="@+id/photo_comments_current_user_image"
                android:hint="Add a comment.."
                app:layout_constraintStart_toEndOf="@+id/photo_comments_current_user_image"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toStartOf="@+id/photo_comments_post_button"
                android:layout_marginEnd="24dp"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_semibold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>