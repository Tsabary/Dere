<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ImageFullSizeFragment"
        android:background="@color/black">


    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/comment_box"
            android:id="@+id/photo_social_scrollView"
            android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/photo_social_timestamp"
                    android:textColor="@color/gray500"
                    tools:text="4 hours ago"
                    android:fontFamily="@font/open_sans_semibold"
                    app:layout_constraintTop_toBottomOf="@+id/photo_social_author_name"
                    app:layout_constraintStart_toEndOf="@+id/photo_social_author_image"
                    android:layout_marginStart="32dp"
                    mapbox:layout_constraintBottom_toBottomOf="@+id/photo_social_author_image"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="43dp"
                    android:id="@+id/photo_social_author_image"
                    tools:src="@drawable/no_dread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="16dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/photo_social_author_reputation"
                    tools:text="(12)"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/gray500"
                    app:layout_constraintTop_toTopOf="@+id/photo_social_author_name"
                    app:layout_constraintBottom_toBottomOf="@+id/photo_social_author_name"
                    app:layout_constraintStart_toEndOf="@+id/photo_social_author_name"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/photo_social_author_name"
                    tools:text="autore name"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintStart_toEndOf="@+id/photo_social_author_image"
                    android:layout_marginStart="32dp"
                    app:layout_constraintTop_toTopOf="@+id/photo_social_author_image"
                    android:textColor="@color/gray800"
                    android:textSize="15sp"/>

            <co.getdere.otherClasses.SwipeLockableViewPager
                    android:id="@+id/image_full_viewpager"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintDimensionRatio="5:4"
                    android:layout_marginTop="16dp"
                    mapbox:layout_constraintTop_toBottomOf="@+id/photo_social_author_image"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/image_full_viewpager"
                    android:id="@+id/constraintLayout3"
            >

                <ImageButton
                        android:src="@drawable/bucket"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_bucket_icon"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        mapbox:layout_constraintTop_toTopOf="@+id/photo_social_like_button"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/photo_social_like_button"
                        mapbox:layout_constraintStart_toEndOf="@+id/photo_social_like_button"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toStartOf="@+id/photo_social_share"/>
                <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:id="@+id/photo_social_comment_count"-->
                        <!--tools:text="12"-->
                        <!--android:fontFamily="@font/open_sans_semibold"-->
                        <!--app:layout_constraintTop_toTopOf="@+id/photo_social_comment_icon"-->
                        <!--app:layout_constraintBottom_toBottomOf="@+id/photo_social_comment_icon"-->
                        <!--app:layout_constraintStart_toEndOf="@+id/photo_social_comment_icon"-->
                        <!--app:layout_constraintHorizontal_bias="0.5"-->
                        <!--app:layout_constraintEnd_toStartOf="@+id/photo_social_timestamp"-->
                        <!--android:visibility="visible"/>-->
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_image_details"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/photo_social_like_count"
                        android:layout_marginEnd="48dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:fontFamily="@font/open_sans_semibold"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_bucket_count"
                        tools:text="132"
                        android:fontFamily="@font/open_sans_semibold"
                        app:layout_constraintEnd_toEndOf="@+id/photo_social_bucket_icon"
                        app:layout_constraintStart_toStartOf="@+id/photo_social_bucket_icon"
                        app:layout_constraintBaseline_toBaselineOf="@+id/photo_social_like_count"
                        android:textColor="@color/gray800"/>
                <!--<ImageButton-->
                        <!--android:src="@drawable/comment"-->
                        <!--android:layout_width="25dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:id="@+id/photo_social_comment_icon"-->
                        <!--android:background="@android:color/transparent"-->
                        <!--android:scaleType="fitCenter"-->
                        <!--app:layout_constraintTop_toTopOf="@+id/photo_social_bucket_count"-->
                        <!--app:layout_constraintBottom_toBottomOf="@+id/photo_social_bucket_count"-->
                        <!--app:layout_constraintStart_toEndOf="@+id/photo_social_bucket_count"-->
                        <!--app:layout_constraintHorizontal_bias="0.5"-->
                        <!--app:layout_constraintEnd_toStartOf="@+id/photo_social_comment_count"-->
                        <!--android:layout_marginEnd="8dp"-->
                        <!--android:visibility="gone"/>-->

                <ImageButton
                        android:src="@drawable/heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_like_button"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        mapbox:layout_constraintTop_toTopOf="@+id/image_expended_map"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_map"
                        mapbox:layout_constraintStart_toEndOf="@+id/image_expended_map"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toStartOf="@+id/photo_social_bucket_icon"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_like_count"
                        tools:text="12"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/photo_social_like_button"
                        app:layout_constraintEnd_toEndOf="@+id/photo_social_like_button"
                        app:layout_constraintStart_toStartOf="@+id/photo_social_like_button"
                        android:textColor="@color/gray800"/>
                <ImageButton
                        android:src="@drawable/ic_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_social_share"
                        android:background="@android:color/transparent"
                        mapbox:layout_constraintTop_toTopOf="@+id/photo_social_bucket_icon"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/photo_social_bucket_icon"
                        mapbox:layout_constraintStart_toEndOf="@+id/photo_social_bucket_icon"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toEndOf="parent"/>
                <ImageButton
                        android:src="@drawable/ic_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_map"
                        android:background="@android:color/transparent"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        mapbox:layout_constraintHorizontal_bias="0.5"
                        mapbox:layout_constraintEnd_toStartOf="@+id/photo_social_like_button"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="32dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:id="@+id/image_expended_link_address"
                        android:layout_marginBottom="24dp"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        mapbox:layout_constraintTop_toBottomOf="@+id/photo_social_image_details"
                        android:layout_marginTop="16dp"
                        tools:text="httpssdfdsfsdf"
                        android:visibility="gone"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/green700"
                        mapbox:layout_constraintVertical_bias="0.0"
                        mapbox:layout_constraintStart_toEndOf="@+id/image_expended_link_icon"
                        android:layout_marginStart="16dp"/>
                <ImageView
                        android:src="@drawable/link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_expended_link_icon"
                        android:scaleType="centerCrop"
                        mapbox:layout_constraintTop_toTopOf="@+id/image_expended_link_address"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/image_expended_link_address"
                        android:visibility="gone"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                    android:id="@+id/image_expended_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray100"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_expended_comments_recycler"
                    app:layout_constraintTop_toBottomOf="@+id/image_expended_divider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">
            </androidx.recyclerview.widget.RecyclerView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/comment_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="6dp"
            android:background="@color/white">

        <TextView
                android:text="Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photo_comments_post_button"
                android:textColor="@color/green700"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toTopOf="@+id/photo_comments_comment_input"
                app:layout_constraintBottom_toBottomOf="@+id/photo_comments_comment_input"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/photo_comments_comment_input"
                android:layout_marginStart="24dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/photo_comments_current_user_image"
                tools:src="@drawable/no_dread"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/photo_comments_comment_input"
                app:layout_constraintTop_toTopOf="@+id/photo_comments_current_user_image"
                app:layout_constraintBottom_toBottomOf="@+id/photo_comments_current_user_image"
                android:hint="Add a comment.."
                app:layout_constraintStart_toEndOf="@+id/photo_comments_current_user_image"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toStartOf="@+id/photo_comments_post_button"
                android:layout_marginEnd="24dp"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_semibold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>