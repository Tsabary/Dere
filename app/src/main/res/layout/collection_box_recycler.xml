<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintDimensionRatio="w,1:1"
            android:id="@+id/cardViewBackground"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/collection_box_recycler_photo_count"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            tools:text="23 photos"
            app:layout_constraintTop_toBottomOf="@+id/collection_box_recycler_name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:textSize="15sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/collection_box_recycler_name"
            tools:text="Bucket name"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintDimensionRatio="w,1:1"
            android:id="@+id/cardView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray100">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/collection_box_recycler_recycler"
                android:paddingTop="-1dp"
                android:paddingLeft="-1dp"/>
        <!--<androidx.recyclerview.widget.RecyclerView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--tools:layout_editor_absoluteX="8dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/bucket_box_photo_count"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--android:id="@+id/bucket_box_recycler_recycler_background"-->
        <!--android:paddingTop="-1dp"-->
        <!--android:paddingLeft="-1dp"/>-->
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>