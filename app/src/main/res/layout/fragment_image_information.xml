<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.ImageInformationFragment">


    <com.google.android.material.chip.ChipGroup
            android:id="@+id/image_information_chip_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter tags"
              android:importantForAutofill="no"
              android:id="@+id/image_information_tag_input"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="32dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="32dp"
              app:layout_constraintHorizontal_bias="1.0"
              android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-"
              android:padding="8dp"
              android:paddingStart="0dp"
              android:background="@android:color/transparent"
              android:layout_marginTop="8dp"
              android:inputType="text"
              app:layout_constraintTop_toBottomOf="@+id/image_description_next"
              android:fontFamily="@font/open_sans_semibold"/>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/image_information_tag_input"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:id="@+id/image_information_tag_recycler"
            android:scrollbars="vertical"
            android:background="@drawable/board_unresolved_count_background"
            android:visibility="gone"/>


    <TextView
            android:text="Use a dash to seperate multi-word tags.\nMaximum 5 tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_information_tag_instructions"
            android:textColor="@color/gray500"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_information_tag_recycler"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/image_information_url_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:paddingStart="0dp"
            android:inputType="text"
            android:hint="https://"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/image_information_tag_instructions"
            android:fontFamily="@font/open_sans_semibold"/>

    <TextView
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_description_next"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:textColor="@color/green700"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans_bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>