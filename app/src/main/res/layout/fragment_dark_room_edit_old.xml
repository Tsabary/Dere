<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DarkRoomEditFragment">


    <co.getdere.otherClasses.MyCircleProgressBar
            xmlns:cpb="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dark_room_edit_progress_bar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            cpb:progressColor="@color/green700"
            cpb:backgroundColor="@color/green300"
            cpb:backgroundWidth="8"
            cpb:textSize="18sp"
            cpb:roundedCorners="true"
            cpb:myStrokeWidth="12"
            cpb:suffix="%"
            cpb:prefix=""
            cpb:progressText=""
            cpb:maxValue="100"
            cpb:progressTextColor="@color/green700"
            cpb:layout_constraintStart_toStartOf="parent"
            cpb:layout_constraintHorizontal_bias="0.5"
            cpb:layout_constraintEnd_toEndOf="parent"
            cpb:layout_constraintTop_toTopOf="parent"
            cpb:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dark_room_edit_scroll_view">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/privacy_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/dark_room_edit_privacy_container"
                    android:elevation="1dp"
                    android:visibility="gone">

                <TextView
                        android:text="public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_privacy_text"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/dark_room_edit_image_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintDimensionRatio="5:4"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/no_dread"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/dark_room_edit_image_vertical"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_image_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintDimensionRatio="4:5"
                    android:scaleType="centerCrop"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:visibility="gone"
                    tools:srcCompat="@drawable/no_dread"/>

            <TextView
                    android:text="Location input"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_image_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_location_input_static"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/open_sans_bold"/>

            <EditText
                    android:layout_width="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_location_input_static"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/dark_room_edit_location_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:hint="Any tips for other travelers?"
                    android:elevation="2dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="4sp"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:padding="0dp"
                    android:layout_marginTop="8dp"/>


            <TextView
                    android:text="Attach a link"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_location_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_url_static"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/open_sans_bold"/>


            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/dark_room_edit_url"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:hint="Any useful links that you can share?"
                    android:elevation="2dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_url_static"
                    android:lineSpacingExtra="4sp"
                    android:inputType="textUri|textMultiLine"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:layout_marginTop="8dp"/>


            <TextView
                    android:text="Tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_static_tags"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray900"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_url"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/open_sans_bold"/>


            <com.google.android.material.chip.ChipGroup
                    android:id="@+id/dark_room_edit_chip_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_static_tags"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:chipSpacingVertical="10dp"
                    android:layout_marginTop="16dp"/>


            <EditText android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:hint="Enter tags"
                      android:id="@+id/dark_room_edit_tag_input"
                      app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_chip_group"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="32dp"
                      android:digits="abcdefghijklmnopqrstuvwxyz0123456789-"
                      android:background="@android:color/transparent"
                      android:inputType="textEmailAddress"
                      android:layout_marginTop="8dp"
                      app:layout_constraintEnd_toStartOf="@+id/dark_room_edit_add_tag_button"
                      android:layout_marginEnd="24dp"/>


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_tag_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:id="@+id/dark_room_edit_tag_recycler"
                    android:scrollbars="vertical"
                    android:background="@drawable/tag_suggestions_recycler"
                    android:visibility="gone"/>


            <ImageButton
                    android:src="@drawable/add_tag_button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/buttons_shape"
                    android:id="@+id/dark_room_edit_add_tag_button"
                    app:layout_constraintTop_toTopOf="@+id/dark_room_edit_tag_input"
                    app:layout_constraintBottom_toBottomOf="@+id/dark_room_edit_tag_input"
                    android:scaleType="centerCrop"
                    android:padding="8dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:text="Use a dash to seperate multi-word tags.\nMaximum 5 tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_tag_instructions"
                    android:textColor="@color/gray500"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_tag_recycler"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
            />


            <include
                    layout="@layout/fragment_dark_room_edit_map"
                    android:id="@+id/dark_room_edit_map_include"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_tag_instructions"
                    android:layout_marginTop="32dp"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    mapbox:layout_constraintDimensionRatio=""
                    android:visibility="gone"/>


            <TextView
                    android:text="SHARE"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/dark_room_edit_share"
                    android:fontFamily="@font/open_sans_bold"
                    android:textAlignment="center"
                    android:background="@drawable/buttons_shape"
                    app:layout_constraintStart_toEndOf="@+id/dark_room_edit_save"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="32dp"
                    mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_map_include"/>
            <TextView
                    android:text="SAVE"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/dark_room_edit_save"
                    android:fontFamily="@font/open_sans_bold"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="@+id/dark_room_edit_share"
                    app:layout_constraintBottom_toBottomOf="@+id/dark_room_edit_share"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/dark_room_edit_share"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textColor="@color/green700"
                    android:gravity="center"/>
            <TextView
                    android:text="REMOVE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_remove"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/gray500"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_share"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="visible"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Are you sure you want to remove this photos?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_delete_message"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_share"
                    android:fontFamily="@font/open_sans_semibold"
                    android:visibility="gone"/>
            <TextView
                    android:text="CANCEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_delete_cancel_button"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/gray500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/dark_room_edit_delete_remove_button"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_delete_message"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"/>
            <TextView
                    android:text="DELETE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_expended_delete_remove_button"
                    android:textColor="@color/red700"
                    android:fontFamily="@font/open_sans_semibold"
                    app:layout_constraintTop_toTopOf="@+id/dark_room_edit_delete_cancel_button"
                    app:layout_constraintBottom_toBottomOf="@+id/dark_room_edit_delete_cancel_button"
                    app:layout_constraintStart_toEndOf="@+id/dark_room_edit_delete_cancel_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>