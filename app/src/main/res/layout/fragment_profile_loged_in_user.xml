<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
>


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_color="#424242"
            android:elevation="4dp"
            app:civ_border_width="0dp"
            android:id="@+id/profile_li_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/no_dread"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_li_user_name"
            tools:text="User name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_li_image"
            app:layout_constraintEnd_toEndOf="@+id/profile_li_image"
            app:layout_constraintStart_toStartOf="@+id/profile_li_image"
            android:fontFamily="@font/open_sans_bold"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton"
            android:layout_marginTop="32dp"/>
    <!--<View-->
    <!--android:id="@+id/divider2"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/gray300"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--app:layout_constraintHorizontal_bias="0.0"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/profile_bucket_btn"-->
    <!--android:layout_marginTop="24dp"/>-->
    <TextView
            android:text="BUCKET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_li_bucket_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/profile_li_roll_btn"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textColor="@color/gray700"
            android:fontFamily="@font/open_sans_bold"/>
    <TextView
            android:text="ROLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_li_roll_btn"
            app:layout_constraintTop_toTopOf="@+id/profile_li_bucket_btn"
            app:layout_constraintBottom_toBottomOf="@+id/profile_li_bucket_btn"
            app:layout_constraintStart_toEndOf="@+id/profile_li_bucket_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textColor="@color/gray500"
            android:fontFamily="@font/open_sans_bold"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_li_bucket_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/profile_li_gallery"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="Hi! My name is Yanay and I've just started traveling, follow me around to see my favorite places!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_li_user_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/gray500"
            android:textAlignment="center"/>
    <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/instagram_icon"
            android:id="@+id/imageButton"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>