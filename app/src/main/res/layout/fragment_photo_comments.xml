<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.OpenPhotoSocialBox"
        android:background="@color/white"
        android:id="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/image_full_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:id="@+id/comment_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="6dp"
            android:background="@color/white">

        <TextView
                android:text="Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photo_comments_post_button"
                android:textColor="@color/green700"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toTopOf="@+id/photo_comments_comment_input"
                app:layout_constraintBottom_toBottomOf="@+id/photo_comments_comment_input"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/photo_comments_comment_input"
                android:layout_marginStart="24dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:civ_border_color="#424242"
                android:elevation="4dp"
                app:civ_border_width="0dp"
                android:id="@+id/photo_comments_current_user_image"
                tools:src="@drawable/no_dread"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/photo_comments_comment_input"
                app:layout_constraintTop_toTopOf="@+id/photo_comments_current_user_image"
                app:layout_constraintBottom_toBottomOf="@+id/photo_comments_current_user_image"
                android:hint="Add a comment.."
                app:layout_constraintStart_toEndOf="@+id/photo_comments_current_user_image"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toStartOf="@+id/photo_comments_post_button"
                android:layout_marginEnd="24dp"
                android:textSize="14sp"
                android:background="@android:color/transparent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/comment_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/photo_comments_author_name"
                    tools:text="autore name"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/photo_comments_author_image"
                    android:layout_marginStart="24dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@+id/photo_comments_author_image"
                    android:singleLine="false"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:civ_border_color="#424242"
                    android:elevation="4dp"
                    app:civ_border_width="0dp"
                    android:id="@+id/photo_comments_author_image"
                    tools:src="@drawable/no_dread"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/photo_comments_recycler"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider7"
                    android:layout_marginTop="24dp">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                    android:text="Image description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/photo_comments_photo_description"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/photo_comments_author_name"
                    app:layout_constraintStart_toEndOf="@+id/photo_comments_author_image"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <View
                    android:id="@+id/divider7"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintTop_toBottomOf="@+id/photo_comments_photo_description"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="visible"
                    android:backgroundTint="@color/gray500"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
