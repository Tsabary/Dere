<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CollectionGalleryFragment"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/collection_gallery_title"
            app:layout_constraintTop_toBottomOf="@+id/collection_gallery_title_editable"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            tools:text="Bucket name"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_black"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/collection_gallery_edit"
            android:visibility="gone"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/collection_gallery_title_editable"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            tools:text="Bucket name name n"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_black"
            android:visibility="visible"
            android:background="@android:color/transparent"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/collection_gallery_edit"/>


    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collection_gallery_photos_count"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/collection_gallery_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            android:textSize="15sp"/>
    <ImageButton
            android:src="@drawable/world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collection_gallery_show_map"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"
            android:layout_marginTop="32dp"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_green"
            android:id="@+id/collection_gallery_edit"
            app:layout_constraintEnd_toStartOf="@id/collection_gallery_share"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="32dp"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:id="@+id/collection_gallery_share"
            app:layout_constraintEnd_toStartOf="@+id/collection_gallery_show_map"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="32dp"
            android:visibility="gone"/>
    <co.getdere.otherClasses.SwipeLockableViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/collection_gallery_photos_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/collection_gallery_viewpager"
            app:layout_constraintBottom_toTopOf="@+id/collection_gallery_publish"
    >
    </co.getdere.otherClasses.SwipeLockableViewPager>

    <TextView
            android:text="Publish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/collection_gallery_publish"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:background="@drawable/buttons_shape"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:gravity="center"
            android:padding="16dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/collection_gallery_viewpager"/>


</androidx.constraintlayout.widget.ConstraintLayout>