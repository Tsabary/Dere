<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Fragments.OpenPhotoSocialBox"
            android:background="@color/white"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/image_full_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:civ_border_color="#424242"
                android:elevation="4dp"
                app:civ_border_width="1dp"
                android:id="@+id/image_full_current_user_image"
                tools:src="@drawable/no_dread"
                app:layout_constraintStart_toStartOf="@+id/image_full_author_image"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/image_full_author_name_and_text"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintEnd_toEndOf="@+id/image_full_author_image"/>


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:civ_border_color="#424242"
                android:elevation="4dp"
                app:civ_border_width="1dp"
                android:id="@+id/image_full_author_image"
                tools:src="@drawable/no_dread"
                app:layout_constraintStart_toStartOf="@+id/image_full_bucket_icon"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/image_full_bucket_icon"
                app:layout_constraintEnd_toEndOf="@+id/image_full_bucket_icon"/>





        <ImageButton
                android:src="@drawable/bucket"
                android:layout_width="25dp"
                android:layout_height="38dp"
                android:id="@+id/image_full_bucket_icon"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="@+id/image_full_bucket_count"
                app:layout_constraintBottom_toBottomOf="@+id/image_full_bucket_count"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/image_full_bucket_count"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="8dp"/>
        <ImageButton
                android:src="@drawable/comment"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_full_comment_counter"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="@+id/image_full_comment_count"
                app:layout_constraintBottom_toBottomOf="@+id/image_full_comment_count"
                app:layout_constraintStart_toEndOf="@+id/image_full_bucket_count"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/image_full_comment_count"
                android:layout_marginEnd="8dp"/>
        <ImageButton
                android:src="@drawable/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_full_share_icon"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/image_full_comment_count"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="132"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_full_bucket_count"
                app:layout_constraintTop_toTopOf="@+id/image_full_comment_counter"
                app:layout_constraintBottom_toBottomOf="@+id/image_full_comment_counter"
                app:layout_constraintStart_toEndOf="@+id/image_full_bucket_icon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/image_full_comment_counter"
                android:layout_marginEnd="32dp"/>
        <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_full_comment_count"
                app:layout_constraintTop_toTopOf="@+id/image_full_share_icon"
                app:layout_constraintBottom_toBottomOf="@+id/image_full_share_icon"
                app:layout_constraintStart_toEndOf="@+id/image_full_comment_counter"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/image_full_share_icon"
                android:layout_marginEnd="32dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_full_author_name_and_text"
                tools:text="autore name"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_full_author_image"
                android:layout_marginStart="24dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/image_full_author_image"
                app:layout_constraintBottom_toBottomOf="@+id/image_full_author_image"/>
        <TextView
                android:text="Add a comment.."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_full_comment_cta"
                android:textColor="@color/gray500"
                app:layout_constraintTop_toTopOf="@+id/image_full_current_user_image"
                app:layout_constraintBottom_toBottomOf="@+id/image_full_current_user_image"
                app:layout_constraintStart_toEndOf="@+id/image_full_current_user_image"
                android:layout_marginStart="24dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_full_timestamp"
                android:textColor="@color/gray500"
                tools:text="4 hours ago"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"/>
        <ImageButton
                android:src="@drawable/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:background="@android:color/transparent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
