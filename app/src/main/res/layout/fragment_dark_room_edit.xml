<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DarkRoomEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:elevation="7dp"
            android:id="@+id/dark_room_edit_options_background"
            android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                mapbox:layout_constraintTop_toTopOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                android:elevation="8dp"
                android:background="@drawable/form_field"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:id="@+id/dark_room_edit_options_box">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    mapbox:layout_constraintTop_toTopOf="parent"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    mapbox:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/dark_room_edit_options_delete_container"
                    android:visibility="gone">

                <TextView
                        android:text="Are you sure you want to delete this post?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_delete_message"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="15sp"/>
                <TextView
                        android:text="@android:string/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_delete_cancel_button"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_delete_message"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        mapbox:layout_constraintEnd_toStartOf="@id/dark_room_edit_delete_remove_button"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/roboto_medium"
                        android:padding="16dp"
                        android:textSize="15sp"/>
                <TextView
                        android:text="Remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_delete_remove_button"
                        mapbox:layout_constraintTop_toTopOf="@+id/dark_room_edit_delete_cancel_button"
                        mapbox:layout_constraintBottom_toBottomOf="@+id/dark_room_edit_delete_cancel_button"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toEndOf="@+id/dark_room_edit_delete_cancel_button"
                        android:layout_marginStart="32dp"
                        android:fontFamily="@font/roboto_medium"
                        android:padding="16dp"
                        android:textSize="15sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    mapbox:layout_constraintTop_toTopOf="parent"
                    mapbox:layout_constraintBottom_toBottomOf="parent"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/dark_room_edit_options_edit_delete"
                    android:visibility="visible">

                <TextView
                        android:text="Save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_save"
                        android:paddingStart="64dp"
                        android:paddingEnd="64dp"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="15sp"/>
                <TextView
                        android:text="Delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_delete"
                        android:paddingStart="64dp"
                        android:paddingEnd="64dp"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_save"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:textSize="15sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <co.getdere.otherClasses.MyCircleProgressBar
            xmlns:cpb="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dark_room_edit_progress_bar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            cpb:progressColor="@color/green700"
            cpb:backgroundColor="@color/green300"
            cpb:backgroundWidth="8"
            cpb:textSize="18sp"
            cpb:roundedCorners="true"
            cpb:myStrokeWidth="12"
            cpb:suffix="%"
            cpb:prefix=""
            cpb:progressText=""
            cpb:maxValue="100"
            cpb:progressTextColor="@color/green700"
            cpb:layout_constraintStart_toStartOf="parent"
            cpb:layout_constraintHorizontal_bias="0.5"
            cpb:layout_constraintEnd_toEndOf="parent"
            cpb:layout_constraintTop_toTopOf="parent"
            cpb:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:elevation="2dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            android:elevation="1dp"
            android:id="@+id/dark_room_edit_white_background"
            android:visibility="gone">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dark_room_edit_scroll_view">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/privacy_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/dark_room_edit_privacy_container"
                    android:elevation="1dp"
                    android:visibility="visible"
                    mapbox:layout_constraintTop_toTopOf="@+id/dark_room_edit_image_horizontal"
                    android:layout_marginTop="16dp">


                <TextView
                        android:text="public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_privacy_text"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="15sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="43dp"
                    android:id="@+id/dark_room_edit_author_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="16dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_author_name"
                    tools:text="autore name"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintStart_toEndOf="@+id/dark_room_edit_author_image"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/dark_room_edit_author_image"
                    android:textColor="@color/gray800"
                    android:textSize="15sp"
                    mapbox:layout_constraintBottom_toBottomOf="@+id/dark_room_edit_author_image"/>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/dark_room_edit_image_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="16dp"
                    mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_author_image"
                    mapbox:layout_constraintDimensionRatio="1:1"
                    android:background="@color/gray100"/>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/dark_room_edit_image_vertical"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_image_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintDimensionRatio="4:5"
                    android:scaleType="centerCrop"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:visibility="gone"/>

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/dark_room_edit_buttons_container"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_image_vertical"
                    android:layout_marginTop="24dp"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    mapbox:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            mapbox:layout_constraintTop_toTopOf="parent"
                            mapbox:layout_constraintBottom_toBottomOf="parent"
                            mapbox:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:id="@+id/dark_room_edit_info_buttons_container">


                        <ImageButton
                                android:src="@drawable/info_unactive"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/dark_room_edit_info_button_unactive"
                                android:background="@drawable/image_fields_unactive"
                                android:padding="14dp"
                                android:scaleType="centerCrop"
                                mapbox:layout_constraintTop_toTopOf="parent"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintStart_toStartOf="parent"
                                android:visibility="gone"/>
                        <ImageButton
                                android:src="@drawable/info_active"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/dark_room_edit_info_button_active"
                                android:background="@drawable/image_fields_active"
                                android:padding="14dp"
                                android:scaleType="centerCrop"
                                mapbox:layout_constraintTop_toTopOf="parent"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintVertical_bias="0.0"
                                mapbox:layout_constraintStart_toEndOf="@+id/dark_room_edit_info_button_unactive"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            mapbox:layout_constraintTop_toTopOf="parent"
                            mapbox:layout_constraintBottom_toBottomOf="parent"
                            mapbox:layout_constraintStart_toEndOf="@+id/dark_room_edit_info_buttons_container"
                            android:layout_marginStart="24dp"
                            android:id="@+id/dark_room_edit_tags_buttons_container"
                    >


                        <ImageButton
                                android:src="@drawable/tag_unactive"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/dark_room_edit_tags_button_unactive"
                                android:background="@drawable/image_fields_unactive"
                                android:padding="14dp"
                                android:scaleType="centerCrop"
                                mapbox:layout_constraintTop_toTopOf="parent"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintStart_toStartOf="parent"/>
                        <ImageButton
                                android:src="@drawable/tag_active"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/dark_room_edit_tags_button_active"
                                android:background="@drawable/image_fields_active"
                                android:padding="14dp"
                                android:scaleType="centerCrop"
                                mapbox:layout_constraintTop_toTopOf="parent"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintVertical_bias="0.0"
                                mapbox:layout_constraintStart_toEndOf="@+id/dark_room_edit_tags_button_unactive"
                                android:visibility="gone"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            mapbox:layout_constraintTop_toTopOf="parent"
                            mapbox:layout_constraintBottom_toBottomOf="parent"
                            mapbox:layout_constraintStart_toEndOf="@+id/dark_room_edit_tags_buttons_container"
                            android:layout_marginStart="24dp"
                            android:id="@+id/dark_room_edit_url_buttons_container">


                        <ImageButton
                                android:src="@drawable/link_unactive"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/dark_room_edit_url_button_unactive"
                                android:background="@drawable/image_fields_unactive"
                                android:padding="14dp"
                                android:scaleType="centerCrop"
                                mapbox:layout_constraintTop_toTopOf="parent"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintStart_toStartOf="parent"/>
                        <ImageButton
                                android:src="@drawable/link_active"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/dark_room_edit_url_button_active"
                                android:background="@drawable/image_fields_active"
                                android:padding="14dp"
                                android:scaleType="centerCrop"
                                mapbox:layout_constraintTop_toTopOf="parent"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintVertical_bias="0.0"
                                mapbox:layout_constraintStart_toEndOf="@+id/dark_room_edit_url_button_unactive"
                                android:visibility="gone"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </HorizontalScrollView>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dark_room_edit_information_container"
                    mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_buttons_container"
                    android:layout_marginTop="24dp"
                    android:visibility="visible"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp">

                <EditText
                        android:id="@+id/dark_room_edit_location_input"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:ems="10"
                        android:hint="Any tips for other travelers?"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="4sp"
                        android:background="@android:color/transparent"
                        android:elevation="2dp"
                        android:gravity="top"
                        android:padding="0dp"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_medium"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dark_room_edit_tags_container"
                    mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_information_container"
                    android:layout_marginTop="24dp"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:visibility="gone">

                <com.google.android.material.chip.ChipGroup
                        android:id="@+id/dark_room_edit_chip_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:chipSpacingVertical="10dp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter tags"
                        android:id="@+id/dark_room_edit_tag_input"
                        app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_chip_group"
                        app:layout_constraintStart_toStartOf="parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789- &#160;"
                        android:background="@android:color/transparent"
                        app:layout_constraintEnd_toStartOf="@+id/dark_room_edit_add_tag_button"
                        android:layout_marginTop="24dp"
                        android:inputType="textEmailAddress"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_medium"/>


                <ImageButton
                        android:src="@drawable/plus"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/buttons_shape"
                        android:id="@+id/dark_room_edit_add_tag_button"
                        app:layout_constraintTop_toTopOf="@+id/dark_room_edit_tag_input"
                        app:layout_constraintBottom_toBottomOf="@+id/dark_room_edit_tag_input"
                        android:scaleType="centerCrop"
                        android:padding="8dp"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_tag_input"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/dark_room_edit_tag_recycler"
                        android:scrollbars="vertical"
                        android:background="@drawable/tag_suggestions_recycler"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"/>

                <TextView
                        android:text="Use a dash to seperate multi-word tags.\nMaximum 5 tags"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark_room_edit_tag_instructions"
                        android:textColor="@color/gray500"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_tag_recycler"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="12sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dark_room_edit_url_container"
                    mapbox:layout_constraintTop_toBottomOf="@+id/dark_room_edit_tags_container"
                    android:layout_marginTop="24dp"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:visibility="gone">

                <EditText
                        android:id="@+id/dark_room_edit_url"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Any useful links that you can share?"
                        android:elevation="2dp"
                        android:inputType="textUri|textMultiLine"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:lineSpacingExtra="4sp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._~:/?#[]@!$'()*+,;=&amp;"

                        mapbox:layout_constraintEnd_toEndOf="parent"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_medium"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dark_room_edit_map_container"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_url_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="32dp">

                <include
                        layout="@layout/fragment_dark_room_edit_map"
                        android:id="@+id/dark_room_edit_map_include"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        mapbox:layout_constraintEnd_toEndOf="parent"
                        mapbox:layout_constraintStart_toStartOf="parent"
                        mapbox:layout_constraintTop_toTopOf="parent"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        mapbox:layout_constraintHorizontal_bias="0.0"
                        mapbox:layout_constraintVertical_bias="0.0"
                        android:visibility="visible"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dark_room_edit_after_post_actions_container"
                    app:layout_constraintTop_toBottomOf="@+id/dark_room_edit_map_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">

                <TextView
                        android:text="@string/save"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:id="@+id/dark_room_edit_after_post_save"
                        android:fontFamily="@font/roboto_medium"
                        android:textAlignment="center"
                        android:background="@drawable/buttons_shape"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        mapbox:layout_constraintStart_toEndOf="@+id/dark_room_edit_after_post_cancel"
                        mapbox:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="32dp"
                        android:textSize="15sp"/>

                <TextView
                        android:text="@android:string/cancel"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:id="@+id/dark_room_edit_after_post_cancel"
                        android:fontFamily="@font/roboto_medium"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:textColor="@color/green700"
                        android:gravity="center"
                        android:layout_marginStart="32dp"
                        mapbox:layout_constraintTop_toTopOf="@+id/dark_room_edit_after_post_save"
                        mapbox:layout_constraintBottom_toBottomOf="@id/dark_room_edit_after_post_save"
                        mapbox:layout_constraintEnd_toStartOf="@id/dark_room_edit_after_post_save"
                        android:textSize="15sp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
