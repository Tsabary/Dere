<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp">

    <ImageButton
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/heart_white"
            android:id="@+id/staggered_feed_like_button"
            android:elevation="4dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/staggered_feed_image_card"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/staggered_feed_image_card"
            android:scaleType="fitCenter"
            android:contentDescription="@string/like_icon"/>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/staggered_feed_image_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">

        <com.andexert.library.RippleView
                android:id="@+id/staggered_feed_image_ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rv_rippleDuration="100"
                app:rv_zoom="true"
                app:rv_zoomScale="1.2">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/staggered_feed_image"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@string/image"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.andexert.library.RippleView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
