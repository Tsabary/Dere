<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp">

    <ImageButton
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/heart_white"
            android:id="@+id/staggered_feed_like_button"
            android:elevation="4dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/staggered_feed_image_card"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/staggered_feed_image_card"
            android:scaleType="fitCenter"/>

    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/verified"
            android:id="@+id/staggered_feed_verified"
            android:elevation="4dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/staggered_feed_image_card"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/staggered_feed_image_card"
            android:visibility="gone"
            android:scaleType="fitCenter"/>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/staggered_feed_image_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/staggered_feed_image"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:foreground="?android:attr/selectableItemBackground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staggered_feed_author_name"
            android:fontFamily="@font/open_sans_bold"
            tools:text="Name Name"
            android:textSize="12sp"
            android:textColor="@color/gray800"
            app:layout_constraintTop_toBottomOf="@+id/staggered_feed_image_card"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staggered_feed_author_reputation"
            app:layout_constraintStart_toEndOf="@+id/staggered_feed_author_name"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/staggered_feed_author_name"
            app:layout_constraintBottom_toBottomOf="@+id/staggered_feed_author_name"
            tools:text="(1.2k)"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/gray500"
            android:textSize="12sp"
            android:visibility="gone"/>



    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/staggered_feed_verified_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/staggered_feed_verified"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/staggered_feed_verified"
            android:background="@color/white"
            android:elevation="2dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/staggered_feed_image_card">

        <TextView
                android:text="A green check is an indication that the photo was take with the app, and it's location is verified."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/staggered_feed_verified_info"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
