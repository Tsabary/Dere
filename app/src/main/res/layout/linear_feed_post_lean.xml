<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:id="@+id/linear_feed_lean_author_image"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear_feed_lean_author_name"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_author_image"
            app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_author_image"
            android:fontFamily="@font/roboto_bold"
            tools:text="Name Name"
            app:layout_constraintBottom_toTopOf="@+id/linear_feed_lean_timestamp"
            android:textSize="15sp"
            android:textColor="@color/gray800"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear_feed_lean_author_reputation"
            app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_author_name"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_author_name"
            app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_author_name"
            tools:text="(1.2k)"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            android:textSize="15sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear_feed_lean_timestamp"
            app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_author_image"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linear_feed_lean_author_name"
            app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_author_image"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            tools:text="4 hours ago"
            android:textSize="15sp"/>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linear_feed_lean_image_card"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linear_feed_lean_timestamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
    >

        <com.andexert.library.RippleView
                android:id="@+id/staggered_feed_lean_image_ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rv_rippleDuration="100"
                app:rv_zoom="true"
                app:rv_zoomScale="1.2">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/linear_feed_lean_image"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.andexert.library.RippleView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_feed_lean_actions_card"
            app:layout_constraintTop_toBottomOf="@+id/linear_feed_lean_image_card"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/heart"
                    android:id="@+id/linear_feed_lean_like"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintEnd_toStartOf="@+id/linear_feed_lean_like_count"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="24dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_feed_lean_like_count"
                    tools:text="24"
                    app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_like"
                    app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_like"
                    app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_like"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/linear_feed_lean_bucket"
                    android:layout_marginEnd="24dp"
                    android:text="0"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bucket"
                    android:id="@+id/linear_feed_lean_bucket"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_like_count"
                    app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_like_count"
                    app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_like_count"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/linear_feed_lean_bucket_count"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_feed_lean_bucket_count"
                    tools:text="234"
                    app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_bucket"
                    app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_bucket"
                    app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_bucket"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/linear_feed_lean_comment"
                    android:layout_marginEnd="24dp"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/comment"
                    android:id="@+id/linear_feed_lean_comment"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_bucket_count"
                    app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_bucket_count"
                    app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_bucket_count"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/linear_feed_lean_comment_count"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_feed_lean_comment_count"
                    tools:text="34"
                    android:fontFamily="@font/roboto_medium"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_comment"
                    app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_comment"
                    app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_comment"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:textColor="@color/gray500"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            android:text="Add a comment.."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear_feed_lean_add_a_comment_cta"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            app:layout_constraintStart_toEndOf="@+id/linear_feed_lean_current_user_photo"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/linear_feed_lean_current_user_photo"
            app:layout_constraintBottom_toBottomOf="@+id/linear_feed_lean_current_user_photo"/>


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/linear_feed_lean_current_user_photo"
            app:layout_constraintTop_toBottomOf="@+id/linear_feed_lean_actions_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
