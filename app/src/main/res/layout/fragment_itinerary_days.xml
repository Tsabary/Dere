<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CollectionFeedFragment"
        android:background="@color/white">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/itinerary_days_scroll_layout"
            android:descendantFocusability="blocksDescendants">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">


            <TextView
                    android:text="Add a day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/itinerary_days_add_day"
                    android:background="@drawable/buttons_shape"
                    android:padding="16dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray500"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/itinerary_days_recycler"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/itinerary_days_recycler"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itinerary_days_spinner"
            />
            <com.jaredrummler.materialspinner.MaterialSpinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itinerary_days_spinner"
                    app:layout_constraintTop_toTopOf="@+id/textView38"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView38"
                    app:layout_constraintBottom_toBottomOf="@+id/textView38"
                    android:ems="9"
                    android:gravity="start"/>
            <TextView
                    android:text="Itinerary starts on: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView38"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray500"
                    android:textSize="15sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>