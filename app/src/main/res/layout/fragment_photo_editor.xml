<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.PhotoEditorFragment">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/photo_editor_image"
            tools:srcCompat="@drawable/no_dread"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="4:5"
            android:scaleType="centerCrop"/>
    <ImageButton
            android:src="@drawable/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photo_editor_keep"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/photo_editor_discard"
            app:layout_constraintBottom_toBottomOf="@+id/photo_editor_discard"
            app:layout_constraintStart_toEndOf="@+id/photo_editor_discard"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:src="@drawable/ic_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photo_editor_discard"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/photo_editor_keep"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photo_editor_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>