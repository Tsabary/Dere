<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerLogin.RegisterActivity"
        android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:ems="10"
                android:id="@+id/register_password_confirmation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/register_password"
                android:background="@drawable/form_field"
                android:hint="@string/confirm_password"
                android:paddingStart="20dp"
                android:inputType="textPassword"
                android:elevation="2dp"/>
        <TextView
                android:text="@string/dere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dere_title"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"/>
        <TextView
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_title"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dere_title"/>


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_width="3dp"
                app:civ_border_color="@android:color/white"
                app:layout_constraintStart_toEndOf="@+id/register_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/register_name"
                android:layout_marginTop="16dp"
                android:id="@+id/register_circular_image_view"
                app:layout_constraintTop_toBottomOf="@+id/login_title"/>


        <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/register_name"
                android:background="@drawable/form_field"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:hint="@string/name"
                android:paddingStart="20dp"
                android:elevation="2dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/register_circular_image_view"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:ems="10"
                android:id="@+id/register_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/register_name"
                android:background="@drawable/form_field"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:hint="@string/email"
                android:paddingStart="20dp"
                android:elevation="2dp"
                android:inputType="textEmailAddress"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:ems="10"
                android:id="@+id/register_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/register_email"
                android:background="@drawable/form_field"
                android:hint="@string/password"
                android:paddingStart="20dp"
                android:inputType="textPassword"
                android:elevation="2dp"/>


        <TextView
                android:text="@string/register"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:id="@+id/register_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/register_password_confirmation"
                android:background="@drawable/login_register_button"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"/>


        <com.tomer.fadingtextview.FadingTextView
                android:text="@string/register"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:id="@+id/register_button_active_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/register_button"
                android:background="@drawable/login_register_button_working"
                android:textSize="18sp"
                android:textColor="@color/green600"
                android:textAlignment="center"
                android:visibility="gone"/>

        <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:id="@+id/register_button_regular_active_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/register_button"
                android:background="@drawable/login_register_button_working"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:visibility="gone"/>


        <TextView
                android:text="@string/already_have_an_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_to_login"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/register_button_regular_active_background"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/check_green"
                android:id="@+id/register_password_match"
                app:layout_constraintEnd_toEndOf="@+id/register_password_confirmation"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/register_password_confirmation"
                app:layout_constraintTop_toTopOf="@+id/register_password_confirmation"
                android:elevation="2dp"
                android:background="@android:color/transparent"
                android:visibility="gone"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>