<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".registerLogin.LoginActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <TextView
            android:text="DERE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dere_title"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_title"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dere_title"/>


    <EditText
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:ems="10"
            android:id="@+id/login_email"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:background="@drawable/form_field"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:hint="Email"
            android:elevation="2dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_title"
            android:inputType="textEmailAddress"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            android:background="@drawable/form_field"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/login_email"
            android:hint="Password"
            android:elevation="2dp"/>


    <TextView
            android:text="LOGIN"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:id="@+id/login_button"
            app:layout_constraintTop_toBottomOf="@+id/login_password"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:background="@drawable/login_register_button"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"/>

    <com.tomer.fadingtextview.FadingTextView
            android:text="LOGIN"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:id="@+id/login_button_active_text"
            app:layout_constraintTop_toBottomOf="@+id/login_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:background="@drawable/login_register_button_working"
            android:textSize="18sp"
            android:textColor="@color/green600"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="24dp"
            android:visibility="gone"/>

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:id="@+id/login_button_active_background"
            app:layout_constraintTop_toBottomOf="@+id/login_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:background="@drawable/login_register_button_working"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="24dp"
            android:visibility="gone"/>


    <TextView
            android:text="Back to registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_to_register"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/login_forgot_password"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:onClick="backToRegistration"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="I forgot my password "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_forgot_password"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/login_button_active_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>