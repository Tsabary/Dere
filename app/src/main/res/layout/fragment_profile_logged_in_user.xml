<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:backgroundTint="@color/white">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:id="@+id/divider5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_photos_static"/>
            <TextView
                    android:text="ROLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_roll_btn"
                    android:textStyle="bold"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/profile_li_bucket_btn"
                    app:layout_constraintTop_toBottomOf="@+id/divider5"
                    android:layout_marginTop="24dp"/>
            <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_insta_icon"
                    android:layout_marginTop="32dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    android:elevation="6dp"
                    android:id="@+id/profile_li_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/no_dread"
                    android:layout_marginTop="80dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_tagline"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_user_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="48dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/gray500"
                    android:textAlignment="center"
                    tools:text="tagline"/>
            <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/instagram_icon"
                    android:id="@+id/profile_li_insta_icon"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_tagline"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_user_name"
                    tools:text="User name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_image"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_image"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_image"
                    android:fontFamily="@font/open_sans_bold"/>
            <TextView
                    android:text="BUCKETS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_bucket_btn"
                    android:textStyle="bold"
                    android:textColor="@color/gray700"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintTop_toTopOf="@+id/profile_li_roll_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_roll_btn"
                    app:layout_constraintStart_toEndOf="@+id/profile_li_roll_btn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_bucket_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/profile_li_gallery"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="Reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/profile_li_reputation_static"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@+id/profile_li_photos_static"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_photos_static"
                    app:layout_constraintStart_toEndOf="@+id/profile_li_photos_static"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/profile_li_followers_static"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_reputation_count"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_reputation_static"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_reputation_static"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_photos_count"
                    android:fontFamily="@font/open_sans_bold"
                    tools:text="32k"/>
            <TextView
                    android:text="Photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_photos_static"
                    android:textSize="11sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/gray500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/profile_li_reputation_static"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_photos_count"/>
            <TextView
                    android:text="Followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_followers_static"
                    android:textSize="11sp"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/open_sans_semibold"
                    app:layout_constraintTop_toTopOf="@+id/profile_li_reputation_static"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_reputation_static"
                    app:layout_constraintStart_toEndOf="@+id/profile_li_reputation_static"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_photos_count"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_photos_static"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_photos_static"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    tools:text="27"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_followers_count"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_reputation_count"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_followers_static"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_followers_static"
                    android:fontFamily="@font/open_sans_bold"
                    tools:text="12"/>
            <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/edit"
                    android:id="@+id/profile_li_edit_profile_button"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="@+id/profile_li_image"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_image"
                    app:layout_constraintStart_toEndOf="@+id/profile_li_image"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
