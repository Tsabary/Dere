<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@color/gray100"
                    android:id="@+id/marketplace_single_row_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintDimensionRatio="2"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/itinerary_image"/>
            <TextView
                    tools:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/marketplace_single_row_title"
                    android:fontFamily="@font/roboto_black"
                    android:textColor="@color/gray900"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/marketplace_single_row_rating_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintHorizontal_bias="0.6"
                    android:layout_marginTop="16dp"/>


            <com.willy.ratingbar.ScaleRatingBar

                    android:id="@+id/marketplace_single_row_rating_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/marketplace_single_row_image"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/marketplace_single_row_rating"
                    android:isIndicator="true"
                    app:srb_numStars="5"
                    app:srb_minimumStars="0"
                    app:srb_rating="0"
                    app:srb_starWidth="12dp"
                    app:srb_starHeight="12dp"
                    app:srb_starPadding="2dp"
                    app:srb_stepSize="0.1"
                    app:srb_clickable="false"
                    app:srb_scrollable="false"
                    app:srb_clearRatingEnabled="true"
                    app:srb_drawableEmpty="@drawable/star_gray"
                    app:srb_drawableFilled="@drawable/star"/>

            <!---->
            <!--<RatingBar-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/marketplace_single_row_rating_bar"-->
                    <!--android:layout_marginTop="16dp"-->
                    <!--app:layout_constraintTop_toBottomOf="@+id/marketplace_single_row_image"-->
                    <!--app:layout_constraintStart_toStartOf="parent"-->
                    <!--android:layout_marginStart="16dp"-->
       <!---->
                    <!--android:layout_marginEnd="8dp"-->
                    <!--app:layout_constraintEnd_toStartOf="@+id/marketplace_single_row_rating"-->

                    <!--android:isIndicator="true"-->
                    <!--app:layout_constraintHorizontal_bias="0.0"-->
                    <!--style="@style/RatingBarFixed"-->
                    <!--android:numStars="5"-->
                    <!--android:rating="0"-->
                    <!--android:stepSize="0.1"/>-->
            <TextView
                    tools:text="3.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/marketplace_single_row_rating"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/gray900"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/marketplace_single_row_rating_bar"
                    app:layout_constraintTop_toTopOf="@+id/marketplace_single_row_rating_bar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>