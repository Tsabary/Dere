<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.6"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/itinerary_day_move_up"
            android:id="@+id/cardView3">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
        >

            <TextView
                    android:text="@string/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView35"
                    android:fontFamily="@font/roboto_black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/gray900"/>
            <TextView
                    tools:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itinerary_day_number"
                    android:fontFamily="@font/roboto_black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView35"
                    android:textColor="@color/gray900"/>
            <TextView
                    tools:text="(Wednesday)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itinerary_day_weekday"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/itinerary_day_number"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/gray500"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/plus"
                    android:id="@+id/itinerary_day_plus"
                    app:layout_constraintTop_toTopOf="@+id/itinerary_day_weekday"
                    app:layout_constraintBottom_toBottomOf="@+id/itinerary_day_weekday"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toStartOf="@+id/itinerary_day_map"
                    android:contentDescription="@string/add_image"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/itinerary_day_images_recycler"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView35"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/world"
                    android:id="@+id/itinerary_day_map"
                    app:layout_constraintTop_toTopOf="@+id/itinerary_day_weekday"
                    app:layout_constraintBottom_toBottomOf="@+id/itinerary_day_weekday"
                    android:scaleType="fitCenter"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/map_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow_up_default"
            android:id="@+id/itinerary_day_move_up"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/itinerary_day_move_down"
            android:contentDescription="@string/move_up_button"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow_down_default"
            android:id="@+id/itinerary_day_move_down"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itinerary_day_move_up"
            android:contentDescription="@string/move_down_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>