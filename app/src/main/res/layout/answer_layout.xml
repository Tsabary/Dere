<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:text="random text fdsdfsdfsdfsdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/answer_content"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/gray900"
                android:lineSpacingExtra="4sp"
                app:layout_constraintStart_toEndOf="@+id/answer_downvote"
                app:layout_constraintTop_toTopOf="@+id/answer_upvote"
                android:layout_marginTop="8dp"/>
        <ImageButton
                android:src="@android:drawable/arrow_down_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_downvote"
                app:layout_constraintTop_toBottomOf="@+id/answer_votes"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
        />
        <ImageButton
                android:src="@android:drawable/arrow_up_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_upvote"
                app:layout_constraintStart_toStartOf="@+id/answer_votes"
                app:layout_constraintEnd_toEndOf="@+id/answer_votes"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_votes"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/answer_downvote"
                app:layout_constraintEnd_toEndOf="@+id/answer_downvote"
                app:layout_constraintTop_toBottomOf="@+id/answer_upvote"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/answer_downvote"
                android:text="7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="Added 4 hours ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_timestamp"
            app:layout_constraintTop_toBottomOf="@+id/second_constraint"
            android:textColor="@color/gray500"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="#424242"
            app:civ_border_width="1dp"
            android:id="@+id/answer_author_image"
            tools:src="@drawable/no_dread"
            app:layout_constraintStart_toStartOf="@+id/answer_timestamp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_timestamp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/divider6"/>

    <TextView
            android:text="Author Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_author_name"
            app:layout_constraintStart_toEndOf="@+id/answer_author_image"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/answer_author_image"/>
    <TextView
            android:text="Author reputation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_author_reputation"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_author_name"
            app:layout_constraintBottom_toBottomOf="@+id/answer_author_image"
            app:layout_constraintStart_toStartOf="@+id/answer_author_name"
    />
    <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/gray300"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>