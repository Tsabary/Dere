<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer_content"
            android:textColor="@color/gray900"
            android:lineSpacingExtra="4sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/answer_votes"
            tools:text="random text fdsdfsdfsdfsdf"/>
    <ImageButton
            app:srcCompat="@drawable/arrow_up_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_upvote"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/answer_votes"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="@+id/answer_votes"
            app:layout_constraintStart_toStartOf="@+id/answer_votes"
            android:background="@android:color/transparent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_votes"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/answer_upvote"
            app:layout_constraintBottom_toTopOf="@+id/answer_downvote"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="@+id/answer_downvote"
            app:layout_constraintStart_toStartOf="@+id/answer_downvote"
            android:text="0"/>
    <ImageButton
            app:srcCompat="@drawable/arrow_down_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_downvote"
            app:layout_constraintTop_toBottomOf="@+id/answer_votes"
            app:layout_constraintBottom_toTopOf="@+id/divider6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_timestamp"
            android:textColor="@color/gray500"
            app:layout_constraintStart_toStartOf="@+id/answer_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_content"
            tools:text="Added 4 hours ago"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="#424242"
            app:civ_border_width="0dp"
            android:elevation="4dp"
            android:id="@+id/answer_author_image"
            tools:src="@drawable/no_dread"
            app:layout_constraintStart_toStartOf="@+id/answer_timestamp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_timestamp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/divider6"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_author_name"
            app:layout_constraintStart_toEndOf="@+id/answer_author_image"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/answer_author_image"
            tools:text="Author Name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_author_reputation"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_author_name"
            app:layout_constraintBottom_toBottomOf="@+id/answer_author_image"
            app:layout_constraintStart_toStartOf="@+id/answer_author_name"
            tools:text="Author reputation"/>
    <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/gray100"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>