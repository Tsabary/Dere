<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray100">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:id="@+id/constraintLayout4">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/answer_comment_author_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="98dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_comment"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/answer_comment_author_name"
                app:layout_constraintStart_toStartOf="@+id/answer_comment_author_name"
                tools:text="User comment"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/gray800"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/answer_comment_delete"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_author_name"
                app:layout_constraintTop_toTopOf="@+id/answer_comment_author_image"
                tools:text="User name"
                android:fontFamily="@font/open_sans_bold"
                app:layout_constraintStart_toEndOf="@+id/answer_comment_author_image"
                android:layout_marginStart="16dp"
                android:textColor="@color/gray800"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_author_reputation"
                app:layout_constraintStart_toEndOf="@+id/answer_comment_author_name"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/answer_comment_author_name"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/gray500"
                tools:text="(0)"/>
        <TextView
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_delete"
                android:textColor="@color/red700"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/answer_comment_comment"
                android:visibility="gone"/>
        <TextView
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_edit"
                app:layout_constraintTop_toTopOf="@+id/answer_comment_delete"
                app:layout_constraintBottom_toBottomOf="@+id/answer_comment_delete"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/answer_comment_delete"
                android:textColor="@color/green700"
                android:fontFamily="@font/open_sans_semibold"
                android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>