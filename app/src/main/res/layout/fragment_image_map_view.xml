<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ImageMapViewFragment"
        tools:showIn="@layout/fragment_image_expanded">


    <ImageButton
            android:src="@drawable/focus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/image_map_focus"
            mapbox:layout_constraintEnd_toEndOf="@+id/image_map_view"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#CCffffff"
            android:scaleType="center"
            mapbox:layout_constraintBottom_toBottomOf="@+id/image_map_view"
            android:elevation="2dp"/>

    <co.getdere.otherClasses.CustomMapView
            android:id="@+id/image_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraZoom="11"/>



</androidx.constraintlayout.widget.ConstraintLayout>
