<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.BucketGalleryFragment">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bucket_gallery_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            tools:text="Bucket name"
            android:textSize="24sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/bucket_gallery_show_map"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bucket_gallery_photos_count"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bucket_gallery_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/gray500"/>
    <ImageButton
            android:src="@drawable/common_google_signin_btn_icon_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/bucket_gallery_show_map"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/bucket_gallery_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/bucket_gallery_title"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bucket_gallery_photos_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bucket_gallery_recycler"/>
</androidx.constraintlayout.widget.ConstraintLayout>