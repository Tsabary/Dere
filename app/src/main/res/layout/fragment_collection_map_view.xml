<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ImageMapViewFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bucket_map_images_recycler_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            mapbox:layout_constraintTop_toTopOf="parent"
            android:elevation="2dp">

        <ImageButton
                android:src="@drawable/focus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/bucket_map_focus"
                mapbox:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#33ffffff"
                android:scaleType="center"
                mapbox:layout_constraintBottom_toTopOf="@id/bucket_map_images_recycler"
                android:elevation="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                mapbox:layout_constraintTop_toTopOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                android:id="@+id/constraintLayout13"
                mapbox:layout_constraintHorizontal_bias="0.5"
                mapbox:layout_constraintBottom_toTopOf="@+id/constraintLayout14"
        >

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                mapbox:layout_constraintTop_toBottomOf="@+id/constraintLayout13"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                android:id="@+id/constraintLayout14"
                mapbox:layout_constraintHorizontal_bias="0.5"
                mapbox:layout_constraintBottom_toTopOf="@+id/constraintLayout15"
        >

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                mapbox:layout_constraintTop_toBottomOf="@+id/constraintLayout14"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                android:id="@+id/constraintLayout15"
                mapbox:layout_constraintHorizontal_bias="0.5"
                mapbox:layout_constraintBottom_toTopOf="@+id/constraintLayout16"
        >

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                mapbox:layout_constraintTop_toBottomOf="@+id/constraintLayout15"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                android:id="@+id/constraintLayout16"
                mapbox:layout_constraintHorizontal_bias="0.5"
                mapbox:layout_constraintBottom_toTopOf="@+id/bucket_map_images_recycler"
        >

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:id="@+id/bucket_map_images_recycler"
                android:paddingEnd="300dp"
                android:paddingStart="8dp"
                android:clipToPadding="false"
                android:elevation="2dp"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/constraintLayout16"
                mapbox:layout_constraintHorizontal_bias="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/bucket_map_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            mapbox:mapbox_cameraZoom="11"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent">
    </com.mapbox.mapboxsdk.maps.MapView>


</androidx.constraintlayout.widget.ConstraintLayout>
