<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/board_question"
            app:layout_constraintStart_toEndOf="@+id/board_answers"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/gray900"
            android:layout_marginTop="24dp"
            tools:text="Not able to succefully rum npm install comand on git bash"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/board_tags"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/board_question"
            android:textColor="@color/gray500"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="@+id/board_question"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/board_timestamp"
            app:layout_constraintHorizontal_bias="0.0"
            android:singleLine="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/board_timestamp"
            app:layout_constraintEnd_toEndOf="@+id/board_question"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/board_question"
            android:textColor="@color/gray500"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            tools:text="4 hours ago"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/board_answers"
            android:gravity="center_vertical"
            android:textColor="@color/green700"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            tools:text="4"/>
</androidx.constraintlayout.widget.ConstraintLayout>