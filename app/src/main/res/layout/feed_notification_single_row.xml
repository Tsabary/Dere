<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feed_notification_box">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/feed_notification_initiator_image"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/feed_notification_content"
            tools:text="notificatiooon"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@+id/feed_notification_initiator_image"
            app:layout_constraintStart_toEndOf="@+id/feed_notification_initiator_image"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/feed_notification_post_image"
            android:layout_marginEnd="24dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@+id/feed_notification_content"
            android:id="@+id/feed_notification_post_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_notification_timestamp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/feed_notification_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            tools:text="yesterday"
            app:layout_constraintStart_toStartOf="@+id/feed_notification_content"
            android:textSize="11sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/roboto_medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>