<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:backgroundTint="@color/white">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:elevation="6dp"
            android:id="@+id/profile_ru_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/no_dread"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_user_name"
            tools:text="User name"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/profile_ru_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/open_sans_bold"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray100"
            app:layout_constraintTop_toBottomOf="@+id/profile_ru_photos_static"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/profile_ru_gallery"
            app:layout_constraintTop_toBottomOf="@+id/divider"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_tagline"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_ru_user_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/gray500"
            tools:text="Hi! My name is Yanay and I've just started traveling, follow me around to see my favorite places!"
            android:gravity="center"/>
    <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/instagram_icon"
            android:id="@+id/profile_ru_insta_icon"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_ru_tagline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray100"
            app:layout_constraintTop_toBottomOf="@+id/profile_ru_follow_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_photos_count"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintEnd_toEndOf="@+id/profile_ru_photos_static"
            app:layout_constraintStart_toStartOf="@+id/profile_ru_photos_static"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/divider6"
            tools:text="3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_reputation_count"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintEnd_toEndOf="@+id/profile_ru_reputation_static"
            app:layout_constraintStart_toStartOf="@+id/profile_ru_reputation_static"
            app:layout_constraintBottom_toBottomOf="@+id/profile_ru_photos_count"
            tools:text="12"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_followers_count"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintEnd_toEndOf="@+id/profile_ru_follower_static"
            app:layout_constraintStart_toStartOf="@+id/profile_ru_follower_static"
            app:layout_constraintBottom_toBottomOf="@+id/profile_ru_reputation_count"
            tools:text="45"/>
    <TextView
            android:text="Photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_photos_static"
            android:textSize="11sp"
            android:textColor="@color/gray500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/profile_ru_reputation_static"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_ru_photos_count"/>
    <TextView
            android:text="Reputation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_reputation_static"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/gray500"
            android:textSize="11sp"
            app:layout_constraintTop_toTopOf="@+id/profile_ru_photos_static"
            app:layout_constraintBottom_toBottomOf="@+id/profile_ru_photos_static"
            app:layout_constraintStart_toEndOf="@+id/profile_ru_photos_static"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/profile_ru_follower_static"/>
    <TextView
            android:text="Followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_follower_static"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="11sp"
            android:textColor="@color/gray500"
            app:layout_constraintTop_toTopOf="@+id/profile_ru_reputation_static"
            app:layout_constraintBottom_toBottomOf="@+id/profile_ru_reputation_static"
            app:layout_constraintStart_toEndOf="@+id/profile_ru_reputation_static"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_ru_follow_button"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_ru_insta_icon"
            android:background="@drawable/follow_button"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textColor="@color/white"
            android:visibility="visible"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>