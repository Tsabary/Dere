<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itinerary_review_author_reputation"
            android:id="@+id/itinerary_review_stars_containers"
            app:layout_constraintBottom_toBottomOf="@+id/itinerary_review_author_reputation">

        <ImageView
                android:src="@drawable/star"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:id="@+id/itinerary_review_stars_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"
                android:contentDescription="@string/star"/>
        <ImageView
                android:src="@drawable/star"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:id="@+id/itinerary_review_stars_4"
                app:layout_constraintEnd_toStartOf="@+id/itinerary_review_stars_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintDimensionRatio="h,1:1"
                android:contentDescription="@string/star"/>
        <ImageView
                android:src="@drawable/star"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:id="@+id/itinerary_review_stars_3"
                app:layout_constraintEnd_toStartOf="@+id/itinerary_review_stars_4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintDimensionRatio="h,1:1"
                android:contentDescription="@string/star"/>
        <ImageView
                android:src="@drawable/star"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:id="@+id/itinerary_review_stars_2"
                app:layout_constraintEnd_toStartOf="@+id/itinerary_review_stars_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/star"/>
        <ImageView
                android:src="@drawable/star"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:id="@+id/itinerary_review_stars_1"
                app:layout_constraintEnd_toStartOf="@+id/itinerary_review_stars_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintDimensionRatio="h,1:1"
                android:contentDescription="@string/star"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/itinerary_review_author_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/itinerary_review_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itinerary_review_author_name"
            app:layout_constraintStart_toStartOf="@+id/itinerary_review_author_name"
            tools:text="User comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/gray800"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/itinerary_review_timestamp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itinerary_review_author_name"
            app:layout_constraintTop_toTopOf="@+id/itinerary_review_author_image"
            tools:text="User name"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintStart_toEndOf="@+id/itinerary_review_author_image"
            android:layout_marginStart="16dp"
            android:textColor="@color/gray800"
            android:textSize="15sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itinerary_review_author_reputation"
            app:layout_constraintStart_toEndOf="@+id/itinerary_review_author_name"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/itinerary_review_author_name"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            tools:text="(0)"
            android:textSize="15sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/itinerary_review_stars_containers"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            tools:text="yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itinerary_review_timestamp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            app:layout_constraintStart_toStartOf="@+id/itinerary_review_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>