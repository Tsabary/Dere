<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.ApproveImageFragment"
        android:background="@color/black"
        android:id="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/image_full_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">


    <ImageView
            android:src="@color/green300"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/approve_image_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="4:5"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/privacy_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:id="@+id/constraintLayout2">

        <TextView
                android:text="public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/approve_image_privacy_text"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/approve_image_scroll"
            app:layout_constraintTop_toBottomOf="@+id/approve_image_image">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/approve_image_actions"
            android:background="@color/white">


                <TextView
                        android:text="Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/approve_image_description_title"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans_bold"
                />
                <ImageButton
                        android:src="@drawable/check"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/approve_image_check"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="40dp"
                        app:layout_constraintStart_toStartOf="@+id/approve_image_x"
                        app:layout_constraintEnd_toEndOf="@+id/approve_image_x"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/approve_image_x"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_marginTop="32dp"/>
                <ImageButton
                        android:src="@drawable/ic_x"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/approve_image_x"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/approve_image_check"
                        android:layout_marginBottom="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/approve_image_description_input"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/approve_image_description_title"
                        android:layout_marginStart="32dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toStartOf="@+id/approve_image_check"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:hint="Any tips for other travelers?"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:paddingStart="0dp"/>
                <TextView
                        android:text="URL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/approve_image_description_input"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        android:fontFamily="@font/open_sans_bold"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/approve_image_url_input"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        android:layout_marginStart="32dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:hint="https://"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        android:padding="8dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toStartOf="@+id/approve_image_check"
                        app:layout_constraintHorizontal_bias="0.4"
                        android:paddingStart="0dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>