<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/destination_board">

    <fragment android:id="@+id/destination_board"
              android:name="co.getdere.Fragments.BoardFragment"
              android:label="Community">
        <action android:id="@+id/action_destination_board_to_destination_new_question"
                app:destination="@id/destination_new_question"/>
        <action android:id="@+id/action_destination_board_to_openedQuestionFragment"
                app:destination="@id/destination_question_opened"/>
        <action android:id="@+id/action_destination_board_to_savedQuestionsFragment"
                app:destination="@id/destination_saved"/>
        <action android:id="@+id/action_destination_board_to_boardNotificationsFragment"
                app:destination="@id/destination_board_notifications"/>
    </fragment>

    <fragment android:id="@+id/destination_new_question"
              android:name="co.getdere.Fragments.NewQuestionFragment"
              android:label="Ask a question"
              tools:layout="@layout/new_question">
        <action android:id="@+id/action_destination_new_question_to_destination_board"
                app:destination="@id/destination_board"/>
    </fragment>
    <fragment android:id="@+id/destination_question_opened"
              android:name="co.getdere.Fragments.OpenedQuestionFragment"
              android:label="Community"
              tools:layout="@layout/fragment_opened_question">
        <action android:id="@+id/action_openedQuestionFragment_to_answerFragment"
                app:destination="@id/destination_answer"/>
        <action android:id="@+id/action_destination_question_opened_to_answerCommentFragment"
                app:destination="@id/destination_answer_comment"/>
    </fragment>
    <fragment android:id="@+id/destination_answer"
              android:name="co.getdere.Fragments.AnswerFragment"
              android:label="Answer question"
              tools:layout="@layout/fragment_answer">
        <argument android:name="question"
                  app:argType="co.getdere.Models.Question"
        />
        <action android:id="@+id/action_destination_answer_to_destination_question_opened"
                app:destination="@id/destination_question_opened"/>
        <argument android:name="currentUser"
                  app:argType="co.getdere.Models.Users"/>
    </fragment>
    <fragment android:id="@+id/destination_saved"
              android:name="co.getdere.Fragments.SavedQuestionsFragment"
              android:label="Saved discussions"
              tools:layout="@layout/fragment_saved_questions">
        <action android:id="@+id/action_destinatin_saved_to_destination_question_opened"
                app:destination="@id/destination_question_opened"/>
    </fragment>
    <fragment android:id="@+id/destination_board_notifications"
              android:name="co.getdere.Fragments.BoardNotificationsFragment"
              android:label="Notifications"
              tools:layout="@layout/fragment_board_notifications">
        <action android:id="@+id/action_destination_board_notifications_to_destination_question_opened"
                app:destination="@id/destination_question_opened"/>
    </fragment>
    <fragment android:id="@+id/destination_answer_comment"
              android:name="co.getdere.Fragments.AnswerCommentFragment"
              android:label="AnswerCommentFragment">
        <argument android:name="questionId"
                  app:argType="string"/>
        <argument android:name="answer"
                  app:argType="co.getdere.Models.Answers"/>
        <action android:id="@+id/action_answerCommentFragment_to_destination_question_opened"
                app:destination="@id/destination_question_opened"/>
        <argument android:name="currentUser"
                  app:argType="co.getdere.Models.Users"/>
    </fragment>
</navigation>